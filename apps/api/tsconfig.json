{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    // ---- Overrides for a Node.js Express API ----
    "target": "ES2015",
    "module": "commonjs",

    // ---- Settings specific to this workspace ----
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.json", "index.ts"],
  "exclude": ["node_modules", "dist"]
}